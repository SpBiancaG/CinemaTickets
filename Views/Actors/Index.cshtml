@model IEnumerable<Actor>

@* Define ViewData *@
@{
    ViewData["Title"] = "List of actors";
}

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-12">

            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                        <th style="width: 20%;">@Html.DisplayNameFor(model => model.FullName)</th>
                        <th style="width: 35%;">@Html.DisplayNameFor(model => model.Bio)</th>
                        <th style="width: 30%;">More</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle">
                                <img class="rounded-circle actor-image"
                                     src="@item.ProfilePictureURL"
                                     alt="@item.FullName">
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Bio)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Actors")

<style>
    .actor-image {
        width: 200px; /* Set the desired width */
        height: 200px; /* Set the desired height */
    }
</style>
