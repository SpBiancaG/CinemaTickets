@model Actor
@{
    ViewData["Title"] = "Add a new actor";
}

<style>
    body {
        background-color: #F2F2F2;
        color: darkgrey;
        font-family: 'Century Schoolbook', sans-serif;
    }

    .form-group label.control-label {
        color: darkgrey;
    }

    .text-danger {
        color: MediumVioletRed;
    }

    .btn-outline-success {
        background-color: MediumVioletRed;
        color: white;
    }

    .btn-outline-secondary {
        background-color: #999999;
        color: white;
    }

        .btn-outline-success:hover,
        .btn-outline-secondary:hover {
            background-color: MediumVioletRed;
            color: white;
        }
</style>

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 style="color: mediumvioletred;">Add a new actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" style="width: 200px; height: 200px; border-radius: 50%;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-secondary float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">See all Actors</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#ProfilePictureURL").val();
        });
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $(this).val();
        });
    </script>
}