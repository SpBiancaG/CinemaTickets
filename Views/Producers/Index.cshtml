@model IEnumerable<Producer>

@* Define ViewData *@
@{
    ViewData["Title"] = "List of producers";
}

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-12">

            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                        <th style="width: 20%;">@Html.DisplayNameFor(model => model.FullName)</th>
                        <th style="width: 35%;">@Html.DisplayNameFor(model => model.Bio)</th>
                        <th style="width: 30%;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle producer-image-wrapper">
                                <img class="rounded-circle producer-image"
                                     src="@item.ProfilePictureURL"
                                     alt="@item.FullName">
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Bio)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>

<div style="position:fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

<style>
   

    .producer-image {
        width: 200px; /* Set the desired width */
        height: 200px; /* Set the desired height */
        overflow: hidden;
        border-radius: 50%; /* Make it a circle */
    }

        .producer-image img {
            width: 200px;
            height: 200px;
            object-fit: cover; /* Asigură că imaginea acoperă întregul container fără a fi distorsionată */
            border-radius: 50%; /* Rotunjește imaginea */
        }
</style>
