@model IEnumerable<Cinema>

@* Define ViewData *@
@{
    ViewData["Title"] = "List of cinemas";
}

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-12">

            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.Logo)</th>
                        <th style="width: 20%;">@Html.DisplayNameFor(model => model.Name)</th>
                        <th style="width: 35%;">@Html.DisplayNameFor(model => model.Description)</th>
                        <th style="width: 30%;">More</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle cinema-logo">
                                <img class="rounded-circle"
                                     src="@item.Logo"
                                     alt="@item.Name">
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a>
                                <a class="btn btn-danger text-white"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>

<style>
    .cinema-logo {
        width: 200px; /* Set the desired width */
        height: 200px; /* Set the desired height */
        overflow: hidden;
        border-radius: 50%; /* Make it a circle */
    }

        .cinema-logo img {
            width: 200px;
            height: 200px;
            object-fit: cover; /* Asigură că imaginea acoperă întregul container fără a fi distorsionată */
            border-radius: 50%; /* Rotunjește imaginea */
        }
</style>
